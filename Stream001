import GO_HOME
import kapelusik
for i in range(5):
	for i in range(get_world_size()):
		till()
		move(North)
	move(East)
	kapelusik.nowy_kapelutek()
GO_HOME.Dron_Go_Home()
while True:
	#trzy pierwsze
	for i in range(5):
		#dynia
		for i in range(5):
			harvest()
			if get_water() < 0.5:
				use_item(Items.Water)
			plant(Entities.Pumpkin)
			move(North)
		#marchewka
		for i in range(3):
			harvest()
			if get_water() < 0.5:
				use_item(Items.Water)
			plant(Entities.Carrot)
			move(North)
		move(East)
		kapelusik.nowy_kapelutek()
	#drzewa
	for i in range(4):
		harvest()
		if get_water() < 0.5:
			use_item(Items.Water)
		plant(Entities.Tree)
		move(North)
		harvest()
		move(North)
	move(East)
	kapelusik.nowy_kapelutek()
	#siano
	for i in range(get_world_size()):
		harvest()
		if get_water() < 0.5:
			use_item(Items.Water)
		move(North)
	move(East)
	kapelusik.nowy_kapelutek()
	#drzewa
	for i in range(4):
		harvest()
		if get_water() < 0.5:
			use_item(Items.Water)
		plant(Entities.Tree)
		move(North)
		harvest()
		move(North)
	move(East)
	kapelusik.nowy_kapelutek()
	

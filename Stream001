kapelusze = [Hats.Brown_Hat, Hats.Carrot_Hat, Hats.Gray_Hat, Hats.Green_Hat, Hats.Purple_Hat, Hats.Straw_Hat, Hats.Traffic_Cone]
k = 0
def Dron_Go_Home():
	x, y = get_pos_x(), get_pos_y()
	while x != 0:
		move(East)
		x = get_pos_x()
	while y != 0:
		move(North)
		y = get_pos_y()
	print('Dron gotowy do u≈ºytku')
for i in range(3):
	for i in range(get_world_size()):
		till()
		move(North)
	move(East)
Dron_Go_Home()
while True:
	#trzy pierwsze
	for i in range(3):
		#dynia
		for i in range(3):
			harvest()
			if get_water() < 0.5:
				use_item(Items.Water)
			plant(Entities.Pumpkin)
			move(North)
		#marchewka
		for i in range(3):
			harvest()
			if get_water() < 0.5:
				use_item(Items.Water)
			plant(Entities.Carrot)
			move(North)
		move(East)
	#drzewa
	for i in range(3):
		harvest()
		if get_water() < 0.5:
			use_item(Items.Water)
		plant(Entities.Tree)
		move(North)
		move(North)
	move(East)
	#siano
	for i in range(get_world_size()):
		harvest()
		if get_water() < 0.5:
			use_item(Items.Water)
		move(North)
	move(East)
	#drzewa
	for i in range(3):
		harvest()
		if get_water() < 0.5:
			use_item(Items.Water)
		plant(Entities.Tree)
		move(North)
		move(North)
